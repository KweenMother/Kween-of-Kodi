    <script>
        // Mobile optimization functions
        function toggleSection(element) {
            const section = element.parentElement;
            const content = section.querySelector('.section-content');
            const icon = element.querySelector('.icon');
            
            section.classList.toggle('active');
            
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
                content.style.opacity = 0;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
                content.style.opacity = 1;
            }
            
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');
        }
        
        // Initialize all sections as expanded on desktop, collapsed on mobile
        function initSections() {
            const sections = document.querySelectorAll('.section');
            const isMobile = window.innerWidth < 768;
            
            sections.forEach(section => {
                const title = section.querySelector('.section-title');
                const content = section.querySelector('.section-content');
                const icon = title.querySelector('.icon');
                
                if (isMobile) {
                    content.style.maxHeight = null;
                    content.style.opacity = 0;
                    icon.classList.remove('fa-chevron-up');
                    icon.classList.add('fa-chevron-down');
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                    content.style.opacity = 1;
                    icon.classList.remove('fa-chevron-down');
                    icon.classList.add('fa-chevron-up');
                }
            });
        }
        
        // Initialize on load and on resize
        window.addEventListener('load', initSections);
        window.addEventListener('resize', initSections);
    </script>
